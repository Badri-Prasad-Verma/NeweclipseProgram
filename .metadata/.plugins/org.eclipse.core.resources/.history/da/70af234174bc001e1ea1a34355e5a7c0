package app_java_1;

import java.util.Arrays;

public class A {
	public static void main(String[] args) {
		String str="mtlb";
		boolean vowelCheck=isVowelPresentOrNot(str);
	}

	private static boolean isVowelPresentOrNot(String str) {
		boolean matches = str.toUpperCase().matches("aeiou");
		return matches;
	}
}
